<%= simple_form_for(@quotum, html: { class: 'form-horizontal', role: "form" }, remote: true) do |f| %>

  <div class="modal-body">

    <ul class="errors"></ul>

    <%= f.input :name, input_html: { class: 'form-control', data: { modal: true } } %>

  </div>

  <div class="modal-footer">
    <%= f.button :submit, class: "btn btn-success" %>
    <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
  </div>

<% end %>
