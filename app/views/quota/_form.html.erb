<%= simple_form_for(@quotum, html: { class: 'form-horizontal', role: "form", id: 'quotum-form' }, remote: true) do |f| %>

  <div class="modal-body">

    <ul class="errors"></ul>

    <%= f.input :name, input_html: { class: 'form-control', data: { modal: true } } %>

  </div>

  <div class="modal-footer">

    <div class="recaptcha-container">
      <%= recaptcha_tags %>
    </div>

    <div class="form-buttons">
      <%= f.button :submit, class: "btn btn-success", id: "form-submit" %>
      <button type="button" data-dismiss="modal" class="btn btn-default">Close</button>
    </div>
  </div>
<% end %>
